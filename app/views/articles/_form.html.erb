<div class="container mt-4">
  <h1 class="mb-4"><%= @article.persisted? ? "Editing Article" : "New Article" %></h1>

  <%= form_with(model: @article, local: true, class: "needs-validation") do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control", placeholder: "Enter a catchy title" %>
    </div>

    <div class="mb-3">
      <%= form.label :content, class: "form-label" %>
      <%= form.text_area :content, class: "form-control", rows: 6, placeholder: "Write your amazing content here..." %>
    </div>

    <%= form.submit(@article.persisted? ? "Update Article" : "Create Article",
                    class: "btn btn-primary") %>
  <% end %>
</div>
