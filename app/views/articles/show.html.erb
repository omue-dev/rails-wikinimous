<div class="container mt-3">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <article>
        <h1>
            <%= @article.title %>
            <small>
              <%= link_to edit_article_path(@article), class: "text-primary text-decoration-none me-2" do %>
                <i class="fa fa-pencil fa-xs"></i>
              <% end %>

              <%= link_to article_path(@article),
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
                class: "text-primary text-decoration-none" do %>
                <i class="fa fa-trash fa-xs"></i>
              <% end %>
            </small>
          </h1>

        <hr>

        <p><%= simple_format(@article.content) %></p>

        <%= link_to "Back to Articles", articles_path, class: "btn btn-link" %>
      </article>
    </div>
  </div>
</div>
